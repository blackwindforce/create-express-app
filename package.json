{
  "name": "create-express-app",
  "version": "1.0.0",
  "description": "create-express-app",
  "homepage": "https://github.com/blackwindforce/create-express-app#readme",
  "bugs": {
    "url": "https://github.com/blackwindforce/create-express-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackwindforce/create-express-app.git"
  },
  "license": "MIT",
  "author": "Akira Cai",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "cspell --no-summary",
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "cspell --no-summary",
      "prettier --write"
    ],
    "*.ts": [
      "cspell --no-summary",
      "eslint --ext .ts --fix",
      "prettier --write"
    ],
    "*.yml": [
      "cspell --no-summary",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "standard",
      "standard-with-typescript",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      },
      {
        "files": [
          "*.ts"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "extends": [
          "prettier/@typescript-eslint"
        ]
      }
    ],
    "root": true
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "fp-ts": "^2.9.5",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "commitizen": "^4.2.3",
    "cspell": "^5.2.4",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "jest": "^27.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": "^14.15.5",
    "npm": "^6.14.11"
  }
}
