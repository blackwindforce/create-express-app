{
  "name": "create-express-app",
  "version": "1.0.0",
  "description": "create-express-app",
  "homepage": "https://github.com/blackwindforce/create-express-app#readme",
  "bugs": {
    "url": "https://github.com/blackwindforce/create-express-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackwindforce/create-express-app.git"
  },
  "license": "MIT",
  "author": "Akira Cai",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "cspell --no-summary",
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "cspell --no-summary",
      "prettier --write"
    ],
    "*.yml": [
      "cspell --no-summary",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es2020": true,
      "jest/globals": false
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "eslint-config-standard",
      "plugin:eslint-plugin-jest/recommended",
      "eslint-config-prettier",
      "eslint-config-prettier/standard"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "jest/globals": true
        }
      }
    ],
    "root": true
  },
  "jest": {
    "coverageDirectory": "coverage",
    "restoreMocks": true,
    "testEnvironment": "node"
  },
  "dependencies": {
    "fp-ts": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "cspell": "^4.0.63",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": "12",
    "npm": "6"
  }
}
