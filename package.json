{
  "name": "create-express-app",
  "version": "1.0.0",
  "description": "create-express-app",
  "keywords": [
    "benchmark",
    "commitizen",
    "cspell",
    "eslint",
    "express",
    "husky",
    "jest",
    "lint-staged",
    "prettier"
  ],
  "homepage": "https://github.com/blackwindforce/create-express-app#readme",
  "bugs": {
    "url": "https://github.com/blackwindforce/create-express-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackwindforce/create-express-app.git"
  },
  "license": "MIT",
  "author": "Akira Tsai",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "jest"
    }
  },
  "lint-staged": {
    "*.js": [
      "cspell --no-summary",
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "cspell --no-summary",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "env": {
      "es2020": true,
      "jest/globals": false
    },
    "extends": [
      "eslint:recommended",
      "eslint-config-standard",
      "plugin:eslint-plugin-jest/recommended",
      "plugin:eslint-plugin-prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "jest/globals": true
        }
      }
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "restoreMocks": true,
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "babel-eslint": "^10.1.0",
    "benchmark": "^2.1.4",
    "commitizen": "^4.0.4",
    "cspell": "^4.0.55",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": "12",
    "npm": "6"
  }
}
